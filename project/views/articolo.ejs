<!DOCTYPE html>
<html lang="it">

    <%- include('partials/head') %>

<body>

    <%- include('partials/navbar') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <img src="percorso/immagine-articolo.jpg" alt="Immagine Articolo" class="img-fluid">
            </div>
            <div class="col-md-6">
                <h1><%= articolo.codart %></h1>
                <p><%= articolo.description %></p>
                <p><strong>Prezzo:</strong><%= articolo.price %></p>
                <button onclick="aggiungiAlCarrello('<%= articolo.codart %>', '<%= articolo.price %>', '<%= userId %>', 1)" class="btn btn-primary">Aggiungi al carrello</button>
            </div>
        </div>

        <% if (messages && messages.success && messages.success.length > 0) { %>
          <div id="flash" class="alert alert-success">
            <% messages.success.forEach(message => { %>
              <p><%= message %></p>
            <% }); %>
          </div>
        <% } %>

        <% if (messages && messages.error && messages.error.length > 0) { %>
          <div id="flash" class="alert alert-danger">
            <% messages.error.forEach(message => { %>
              <p><%= message %></p>
            <% }); %>
          </div>
        <% } %>

        <div class="mt-4">
            <h2>Recensioni</h2>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Nome Utente</h5>
                    <p class="card-text">Recensione dell'utente. Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Altro Utente</h5>
                    <p class="card-text">Altra recensione dell'utente. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                </div>
            </div>
        </div>
        
        <% if (user && user.email == 'alessandro.schirinzi1986@gmail.com') { %>
          <a href="/articolo/<%= articolo.codart %>/edit" class="btn btn-primary" style="margin-top: 10px;">Modifica articolo</a>
        <% } %>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        
</body>
</html>