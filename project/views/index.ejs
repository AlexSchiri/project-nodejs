<!DOCTYPE html>
<html lang="it">
    <%- include('partials/head') %>
<body>

    <%- include('partials/navbar') %>

    <div class="hero">
        <div class="container mt-4">
            <% if (session.loginSuccessMessage) { %>
                <div id="flash" class="alert alert-success"><%= session.loginSuccessMessage %></div>
                <% delete session.loginSuccessMessage; %>
              <% } %>

            <% if (session.user) { %>
                <h1>Benvenuto <%= session.user.nome %> nella nostra Home Page</h1>
                <p>Scopri i nostri prodotti migliori</p>
                <% } else { %>
                <h1>Benvenuti nel mio E-commerce</h1>
                <p>Scopri i nostri prodotti migliori</p>
            <% } %>
            <a href="#" class="btn btn-primary btn-lg">Sfoglia ora</a>
        </div>
      </div>

    <div class="featured-products">
        <div class="container">
            <h2>Prodotti in evidenza</h2>
            <div class="row">
                <% latestArticles.forEach(articolo => { %>                  
                    <div class="col-md-4">
                        <div class="card product-card">
                            <img
                            src="product1.jpg"
                            class="card-img-top"
                            alt="Prodotto 1"
                            />
                            <div class="card-body">
                                <h5 class="card-title"><%= articolo.codart %></h5>
                                <p class="card-text"><%= articolo.description %></p>
                                <a href="/articolo/<%= articolo.codart %>" class="btn btn-primary">Acquista ora</a>
                            </div>
                        </div>
                    </div>   
                <% }); %>
            </div>
        </div>
    </div>
        
<style>
    /* Stili CSS personalizzati */
    .featured-products {
    padding: 50px 0;
}

.row {
    display: flex; /* Abilita Flexbox per la riga */
    flex-wrap: wrap; /* Permette ai prodotti di andare a capo su schermi pi√π piccoli */
}

.col-md-4 {
    display: flex; /* Abilita Flexbox per ogni colonna */
}

.product-card {
    margin-bottom: 30px;
    display: flex; /* Abilita Flexbox per la card */
    flex-direction: column; /* Imposta la direzione degli elementi all'interno della card */
    height: 100%; /* Assicura che la card occupi tutta l'altezza della colonna */
}

.product-card .card-body {
    flex-grow: 1; /* Permette al corpo della card di espandersi per riempire lo spazio rimanente */
    display: flex;
    flex-direction: column;
}

.product-card .card-body .btn {
    margin-top: auto; /* Spinge il pulsante in fondo al corpo della card */
}
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function() {
      $('#flash').delay(3000).fadeOut(1000);
    });
</script>
</body>
</html>