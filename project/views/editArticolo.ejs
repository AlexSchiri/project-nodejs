<!DOCTYPE html>
<html lang="it">

    <%- include('partials/head') %>

<body>

    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <form action="/articolo/<%= articolo.codart %>" method="post">
            <input type="hidden" name="codart" id="codart" value="<%= articolo.codart %>">
            <h1 class="mb-4" id="codart" name="codart">Modifica Articolo: <%= articolo.codart %></h1>
            <div class="mb-3">
                <label for="descrizione" class="form-label">Contenuto:</label>
                <textarea class="form-control" id="description" name="description" rows="5"><%= articolo.description %></textarea>
            </div>
            <div class="mb-3">
                <label for="prezzo" class="form-label">Prezzo:</label>
                <input type="number" class="form-control" id="price" name="price" step="0.01" value="<%= articolo.price %>">
            </div>
            <button type="submit" class="btn btn-primary">Salva</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>