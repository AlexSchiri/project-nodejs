<!DOCTYPE html>
<html lang="it">
<%- include('partials/head') %>
<body class="bg-light">

<%- include('partials/navbar') %>

<div class="container py-5">
    <% if (user && user.id) { %>
        <h1> Ciao <%= user.nome %> </h1>
    <% } %>

    <h1 class="text-center mb-4"><%= info %></h1>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% articoli.forEach(articolo => { %>
            <div class="col">
                <div class="card h-100">
                    <img src="https://via.placeholder.com/350x200" class="card-img-top" alt="Immagine Articolo 1">
                    <div class="card-body">
                        <h5 class="card-title"><%= articolo.codart %></h5>
                        <p class="card-text"><%= articolo.description %></p>
                        <p class="card-text">Prezzo: <%= articolo.price %></p>
                        <a href="/articolo/<%= articolo.codart %>" class="btn btn-primary">Leggi di pi√π</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <div class="text-center mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% if (currentPage > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="/articoli/page/<%= currentPage - 1 %>/size/<%= pageSize %>" aria-label="Previous">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                <% } %>

                <% for (let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                        <a class="page-link" href="/articoli/page/<%= i %>/size/<%= pageSize %>"><%= i %></a>
                    </li>
                <% } %>

                <% if (currentPage < totalPages) { %>
                    <li class="page-item">
                        <a class="page-link" href="/articoli/page/<%= currentPage + 1 %>/size/<%= pageSize %>" aria-label="Next">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>